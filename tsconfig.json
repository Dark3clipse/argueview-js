{
	"compilerOptions": {
		"target": "es2018",
		"lib": ["dom","esnext"],
		"moduleResolution": "node",
		"noEmit": false,
		"module": "amd",
		"declaration": true,
		"outFile": "./dist/argueview.js",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"resolveJsonModule": true,
		"baseUrl": "./src",
		"allowJs": true,
		"jsx": "react",
		"paths": {
			"src/*": ["*"],
			"package": ["../package.json"]
		},
		"types" : [
			"node"
		],
		"inlineSourceMap": true,
		"inlineSources": true
	},
	"exclude": [
		"node_modules",
		"build",
		"dist",
		"test"
	]
}