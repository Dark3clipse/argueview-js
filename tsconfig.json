{
	"compilerOptions": {
		"module": "es6",
		"target": "es5",
		"lib": ["dom","es5"],
		"moduleResolution": "node",
		"noEmit": false,
		"declaration": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"resolveJsonModule": true,
		"baseUrl": "./src",
		"allowJs": true,
		"jsx": "react",
		"paths": {
			"src/*": ["*"],
			"package": ["../package.json"]
		},
		"types" : [
			"node"
		],
		"sourceMap": false
	},
	"exclude": [
		"node_modules",
		"build",
		"dist",
		"test"
	],
	"include": [
		"typings",
		"src"
	]
}